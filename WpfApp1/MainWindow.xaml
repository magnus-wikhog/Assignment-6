<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="601.987" Width="800">
    <Grid>
        <WebBrowser x:Name="webBrowser" Margin="10,183,766,371" RenderTransformOrigin="0.224,8.362"/>
        <Menu HorizontalAlignment="Left" VerticalAlignment="Top" Width="792">
            <MenuItem Header="File">
                <MenuItem Header="Open..." Click="mnuOpen_Click"/>
                <MenuItem Header="Print..." Click="mnuPrint_Click"/>
            </MenuItem>
        </Menu>
        <TextBox x:Name="discountEdit" HorizontalAlignment="Right" Height="23" Margin="0,0,10,34" TextWrapping="Wrap" Text="0,00" VerticalAlignment="Bottom" Width="66" HorizontalContentAlignment="Right" PreviewTextInput="DiscountEdit_PreviewTextInput" TextChanged="DiscountEdit_TextChanged"/>
        <Label Content="Discount" HorizontalAlignment="Right" HorizontalContentAlignment="Right"  Margin="0,0,76,35" VerticalAlignment="Bottom" Width="133"/>
        <Label Content="Total" HorizontalAlignment="Right" HorizontalContentAlignment="Right"  Margin="0,0,76,4" VerticalAlignment="Bottom" Width="133" FontWeight="Bold"/>
        <Label x:Name="totalLabel" Content="0,00" HorizontalAlignment="Right" HorizontalContentAlignment="Right"  Margin="0,0,10,4" VerticalAlignment="Bottom" Width="66" FontWeight="Bold" />
        <ListView x:Name="itemList" Margin="10,205,10,66" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn DisplayMemberBinding="{Binding description}" Header="Description" Width="Auto"/>
                    <GridViewColumn DisplayMemberBinding="{Binding quantity}" Header="Quantity" Width="80"/>
                    <GridViewColumn DisplayMemberBinding="{Binding price}" Header="Price" Width="60"/>
                    <GridViewColumn DisplayMemberBinding="{Binding taxPercent}" Header="Tax %" Width="60"/>
                    <GridViewColumn DisplayMemberBinding="{Binding totalTax}" Header="Total tax" Width="60"/>
                    <GridViewColumn DisplayMemberBinding="{Binding totalPrice}" Header="Total" Width="60"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label x:Name="invoiceNumberLabel" Content="" HorizontalAlignment="Left" Margin="621,23,0,0" VerticalAlignment="Top" Width="161" HorizontalContentAlignment="Right"/>
        <Label Content="Invoice number" HorizontalAlignment="Left" Margin="482,23,0,0" VerticalAlignment="Top" Width="134"/>
        <Label Content="Invoice date" HorizontalAlignment="Left" Margin="482,49,0,0" VerticalAlignment="Top" Width="134"/>
        <Label Content="Due date" HorizontalAlignment="Left" Margin="482,73,0,0" VerticalAlignment="Top" Width="134"/>
        <Label x:Name="receiverDetailsLabel" Content="" HorizontalAlignment="Left" Margin="482,105,0,0" VerticalAlignment="Top" Width="300" Height="95"/>
        <Label x:Name="senderCompanyNameLabel" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top" Width="467" HorizontalContentAlignment="Center" FontWeight="Bold" FontSize="16" Content=""/>
        <TextBox x:Name="invoiceDateEdit" HorizontalAlignment="Left" Height="23" Margin="621,53,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" HorizontalContentAlignment="Right"/>
        <TextBox x:Name="dueDateEdit" HorizontalAlignment="Left" Height="23" Margin="621,77,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="161" HorizontalContentAlignment="Right"/>
    </Grid>
</Window>
